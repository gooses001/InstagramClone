<h1>ユーザー登録</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> </h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>  
  <%= f.label :名前 %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.email_field :email %>
  
  <%= f.label :パスワード %>
  <%= f.password_field :password %>
  
  <%= f.label :パスワード再入力 %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.label :image %>
  <%= f.file_field :image, id: :user_image %>
    
  <br>
  <%= f.submit "アカウント作成" %>
<% end %>